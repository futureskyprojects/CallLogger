<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cDataRlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/btn_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cDataPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/cDataCallState"
        android:layout_toLeftOf="@id/cDataCallState"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="0886483147"
        android:textColor="@color/colorInfo"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cDataCallState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="Chưa gọi"
        android:textColor="@color/colorSecondary"
        android:textStyle="bold" />
</RelativeLayout>